<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="720.0" prefWidth="640.0" xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml" fx:controller="lk.ijse.sciencelab.Controller.DashBordController"
            stylesheets="@style.css">

    <children>
        <!-- Sidebar Panel -->
        <AnchorPane fx:id="ancDash" prefWidth="250.0" prefHeight="720.0" styleClass="sidebar">
            <children>
                <Label layoutX="25.0" layoutY="20.0" text="SM Science Lab" styleClass="title-label">
                    <font>
                        <Font name="Segoe UI Semibold" size="20.0"/>
                    </font>
                </Label>

                <!-- White buttons -->
                <Button layoutX="25.0" layoutY="80.0" text="Supplier" onAction="#btnSupplierOnAction" styleClass="nav-button"/>
                <Button layoutX="25.0" layoutY="130.0" text="Chemical" onAction="#btnChemicalOnAction" styleClass="nav-button"/>
                <Button layoutX="25.0" layoutY="180.0" text="Equipment" onAction="#btnEquipmentOnAction" styleClass="nav-button"/>
                <Button layoutX="25.0" layoutY="230.0" text="Project" onAction="#btnProjectOnAction" styleClass="nav-button"/>
                <Button layoutX="25.0" layoutY="280.0" text="Scientist" onAction="#btnScientistOnAction" styleClass="nav-button"/>
                <Button layoutX="25.0" layoutY="330.0" text="Progress" onAction="#btnProgressOnAction" styleClass="nav-button"/>
                <Button layoutX="25.0" layoutY="380.0" text="Group" onAction="#btnGroupOnAction" styleClass="nav-button"/>
                <Button layoutX="25.0" layoutY="430.0" text="Employee" onAction="#btnEmployeeOnAction" styleClass="nav-button"/>
                <Button layoutX="25.0" layoutY="480.0" text="Funder" onAction="#btnFunderOnAction" styleClass="nav-button"/>
            </children>
        </AnchorPane>

        <!-- Main Content Panel -->
        <AnchorPane fx:id="ancPanel" layoutX="250.0" prefWidth="390.0" prefHeight="720.0" styleClass="content-pane"/>
    </children>
</AnchorPane>
