<AnchorPane prefHeight="400.0" prefWidth="1006.0" style="-fx-background-color: #067e7f;" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lk.ijse.sciencelab.Controller.LoginPageController">

    <children>
